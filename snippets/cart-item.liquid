<div class="col-12 d-flex flex-row border-top py-3">
  <hr class="text-primary">
  <div class="col-4 d-flex d-column align-items-end">
    <img class="img-fluid" src="{{ item.image | img_url: '2400x2400' }}">
   </div>
   <div class="col-4 text-start ms-2">
        <h2 class="">{{ item.title }}</h2>
    
    <div class="col-12 d-flex flex-row justify-content-between pb-0 mb-0">

      <div class="cart-quantity-selector" data-key="{{ item.key }}">
      <p class="grey-dark fs-5 fw-bold quantity p-0 mb-3">QTY:</p>
      
      <div class=" d-flex flex-row align-items-center p-0 mb-3">      
        <i data-itemId="{{ item.variant_id }}" data-itemQnt="{{ item.quantity }}" class='sign bx bx-plus-circle pe-2 grey-dark plus fs-3 pb-0' ></i>
        <input disabled class="d-none" id="henlo" name="updates[]" type="text" value="{{ item.quantity }}">
        <h3 class="grey-dark fs-5 mb-0"> {{ item.quantity }}</h3>
       <i data-itemId="{{ item.variant_id }}" data-itemQnt="{{ item.quantity }}" class='sign bx bx-minus-circle ps-2 grey-dark minus fs-3 pb-0'></i>
       </div>
     </div>
    </div>


    <p class="fs-5 fw-bold grey-dark p-0 mt-0 mb-3">ITEM PRICE:</p>
    <p class="grey-dark fs-5 fw-normal fs-5 p-0 mt-0" >{{ item.price | money }}</p>


   </div>
   <div class="col-4 d-flex justify-content-end">
    <a href="{{ item.url_to_remove }}"><i class='bx bx-trash fs-2 grey-dark p-1'></i></a> 
   </div>

   
</div>   