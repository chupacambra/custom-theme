<div class="col-12 col-md-4 col-lg-3">
  <div class="card justify-content-end">
    <img class="img-fluid" src="{{ product.featured_image | img_url: "2000x"}}">
    <div class="card-body">
      <h5 class="card-title ">{{ product.title }}</h5>
      <p class="card-text">{{ product.price | money }}</p>
      <h2>{{ index }}</h2>
      <a href="{{ product.url }}" class="btn btn-primary">Go to Product</a>
    </div>
  </div>
</div>