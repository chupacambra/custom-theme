<div class="col-12 col-md-4 col-lg-3 d-flex align-items-stretch">
  <div class="card justify-content-end ">
    <img class="img-fluid" src="{{ product.featured_image | img_url: "2000x"}}">
    <div class="card-body d-flex flex-column justify-content-around text-center">
      <p class="card-title fs-3 grey-dark">{{ product.title }}</p>
      <p class="card-text fw-normal">{{ product.price | money }}</p>
      <h2>{{ index }}</h2>
      <a href="{{ product.url }}" class="btn btn-primary col-12 align-self-center w-auto">Go to Product</a>
    </div>
  </div>
</div>