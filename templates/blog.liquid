<div class="container-xxl my-5 pb-5">
  {% paginate blogs.news.articles by 6 %}
    {%- assign my_variable = paginate -%}  
    <h1 class="text-dark my-5">{{ blog.title }}</h1>
    <div class="row g-4  my-5">

      {% for article in blog.articles %}
        <div class="col-12 d-flex col-md-6 align-items-stretch">
          <div class="card ">
            <img class="img-fluid" src="{{ article.image | img_url: "2000x"}}">
            <div class="card-body">
              <h5 class="card-title ">{{ article.title }}</h5>
              <p class="card-text">
                published at: {{ article.published_at | date: '%B %d, %Y' }}
              </p>
              <p class="lead">{{ article.excerpt }}</p>
              <a href="{{ article.url }}" class="btn btn-primary">Read Article</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
      <div class="mb-5">
        {% render 'pagination', paginate: paginate %}
      </div>
  
  {% endpaginate %}
</div>