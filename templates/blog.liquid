<div class="container-xxl">
  {% paginate blog.articles by 6 %}

    <h1 class="text-dark text-center my-5">{{ blog.title }}</h1>
    <div class="row g-4 text-center my-5">

      {% for article in blog.articles %}
        <div class="col-12 col-md-6">
          <div class="card ">
            <img class="img-fluid" src="{{ article.image | img_url: "2000x"}}">
            <div class="card-body">
              <h5 class="card-title text-center">{{ article.title }}</h5>
              <p class="card-text">
                published at: {{ article.published_at | date: '%B %d, %Y' }}
              </p>
              <p class="lead">{{ article.excerpt }}</p>
              <a href="{{ article.url }}" class="btn btn-dark">Read Article</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    {{ paginate | default_pagination }}
  {% endpaginate %}
</div>