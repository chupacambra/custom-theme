
<div class="container py-5">

    <div class="row">
      <div class="col-lg-6 product-left mb-5 mb-lg-0">
				<div class="swiper-container product-slider mb-3">
            <div class="swiper-wrapper">
              {% for i in (1..5) %}
                <div class="swiper-slide">
                  <img src="{{ product.featured_image | img_url: "2000x"}}" alt="..."  class="img-fluid">
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
          
          <div class="swiper-container product-thumbs">
            <div class="swiper-wrapper">
              {% for i in (1..5) %}
              <div class="swiper-slide">
                <img src="{{ product.featured_image | img_url: "2000x"}}" alt="..." class="img-fluid">
              </div>
            {% endfor %}      
            </div>
          </div>
        
      </div>
    </div>
  </div>

  <div class="py-5 row d-flex w-50">
  {% form 'product', product %}
    <div class="col-6">
      <select class="form-select " aria-label="Default select example" name="id" id="">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="col-6">
      <button type="submit">Add to cart</button>
    </div>

  {% endform %}
</div>


</div>